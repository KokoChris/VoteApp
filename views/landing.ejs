<% include ./partials/header %>


<div class="container">	
	<header class="jumbotron">
		<div class="container">
			<h1> Welcome to Votron </h1>
			<p>Do your polls quickly and reliably!</p>
			<p>
				<a class="btn btn-primary btn-large"href="/polls/new">Start a new Poll</a>
			</p>
		</div>
	</header>

	<div class="row">
		<div class="col-lg-12">
			<h3>Latest polls from our users</h3>
		</div>
	</div>
	<div class="row" style="display:flex, flex-wrap:wrap;">
		
		<% polls.forEach(function(poll){ %>
			<div class="col-md-3 col-sm-6">		
	   			<div class="thumbnail">	  	
	   			  	<h4> <%=poll.name %> </h4>
	   			  	<a href="polls/<%=poll._id %>" class="btn btn-sm btn-success">Go to Poll</a>
	   			  	
		    	</div>
		    	<p>
		    		
		    	</p>
		 	</div>
		<%}) %>	
	</div>
</div>
<% include ./partials/footer %>